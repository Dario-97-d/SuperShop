@model IEnumerable<SuperShop.Web.Data.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if (User.IsInRole("Admin")){
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.OrderDateLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDateLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </th>
            }
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDateLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-action="Deliver" asp-route-id="@item.Id" class="btn btn-success">Deliver</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
