@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.ErrorTitle == null)
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-secondary">An error occurred while processing your request.</h2>
}
else
{
    <h2 class="text-danger">@ViewBag.ErrorTitle.</h2>
    <h4 class="text-secondary">@Html.Raw(ViewBag.ErrorMessage)</h4>
}

